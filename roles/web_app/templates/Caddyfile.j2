{{ ansible_managed | comment }}

http://{{ web_app_domain }} {
    root * {{ web_app_dist_dir | to_json }}
    encode gzip
    file_server

{% if web_app_php_fpm_enabled %}
    php_fastcgi unix/{{ php_fpm_socket_file }}
{% endif %}

    log {
        output file {{ web_app_caddy_log | to_json }}
    }
}
