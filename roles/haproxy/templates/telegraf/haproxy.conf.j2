{{ ansible_managed | comment }}

[[inputs.prometheus]]
  ## Scrape metrics directly from haproxy's prometheus exporter
  urls = ["http://localhost:8405/metrics"]


# Reads metrics from a SSL certificate
[[inputs.x509_cert]]
  ## List certificate sources
  ## Prefix your entry with 'file://' if you intend to use relative paths
  sources = [
{% for domain in letsencrypt.domains_gandi %}
    "{{ haproxy_ssl_dir }}/{{ domain }}.pem",
    "{{ haproxy_ssl_dir }}/{{ domain }}-ecdsa.pem"{% if not loop.last %},{% endif %}
{% endfor %}
  ]
