{{ ansible_managed | comment }}

# Prometheus config file.
# Check the documentation for more details: https://prometheus.io/docs/prometheus/latest/configuration/configuration

global:
  scrape_interval:     10s # How frequently to scrape targets
  scrape_timeout:      10s # How long until a scrape request times out.
  evaluation_interval: 15s # How frequently to evaluate rules.

  # The labels to add to any time series or alerts when communicating with
  # external systems (federation, remote storage, Alertmanager).
  external_labels:
    monitor: {{ ansible_fqdn }}

{% if prometheus_remote_write_url %}
remote_write:
  - url: "{{ prometheus_remote_write_url }}"
    basic_auth:
      username: "{{ prometheus_username }}"
      password: {{ prometheus_password | string | to_json }}
    remote_timeout: 30s
    queue_config:
      capacity: 10000
      max_samples_per_send: 3000
      batch_send_deadline: 10s
      min_shards: 4
      max_shards: 200
      min_backoff: 100ms
      max_backoff: 10s
{% endif %}

{% if prometheus_remote_read_url %}
remote_read:
  - url: "{{ prometheus_remote_read_url }}"
    read_recent: true
{% endif %}

# Alertmanager configuration
alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - localhost:9093

# Rule files specifies a list of globs. Rules and alerts are read from
# all matching files.
rule_files:
  - /etc/prometheus/rules.d/*.rules

# A list of scrape configurations.
scrape_configs:
  - job_name: extra-config # This is a default value, it is mandatory.
    file_sd_configs:
      - files:
          - conf.d/*.yml

  # Grab metrics about prometheus itself
  - job_name: prometheus
    static_configs:
      - targets:
          - localhost:9090

{% for host in prometheus_telegraf_hosts %}
  # Grab telegraf metrics from {{ host }}
  - job_name: telegraf-{{ host | replace('.', '-') }}
{% if hostvars[host].telegraf_username is defined and hostvars[host].telegraf_password is defined %}
    basic_auth:
      username: {{ hostvars[host].telegraf_username | to_json }}
      password: {{ hostvars[host].telegraf_password | string | to_json }}
{% endif %}
    static_configs:
      - targets:
          - "{{ (host != inventory_hostname) | ternary(host, 'localhost') }}:9273"

{% endfor %}
