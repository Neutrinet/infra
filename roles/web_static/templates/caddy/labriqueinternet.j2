{{ ansible_managed | comment }}

{% for domain in [web_app_domain] + web_app_alt_domains %}
http://{{ domain }}{% if not loop.last %}, {% endif %}
{% endfor %} {
    root * {{ web_app_dist_dir | to_json }}
    encode gzip

    @browse {
        path /video*
        path /files*
        path /hypercube*
    }
    file_server @browse browse
    file_server

    log {
        output file {{ web_app_caddy_log | to_json }}
    }
}
