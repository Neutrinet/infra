{{ ansible_managed | comment }}

http://{{ zammad_domain }} {
    encode gzip zstd

    root * /opt/zammad/public

    request_body {
        max_size 50MB
    }

    reverse_proxy localhost:3000
    reverse_proxy /ws localhost:6042

    log {
        output file /var/log/caddy/{{ zammad_owner }}.log
    }
}
